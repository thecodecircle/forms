    <link href="https://fonts.googleapis.com/css2?family=Alef:wght@400;700&family=Assistant:wght@400;700&family=Heebo:wght@400;700&family=Miriam+Libre:wght@400;700&family=Rubik:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
